<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.profile.screen.SupportHelpFragment"
    android:background="@drawable/background_apk">

    <ImageView
        android:id="@+id/ivBackgroundBiru"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:contentDescription="BACKGROUND BIRU"
        android:src="@drawable/background_gradient_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/back"
        android:contentDescription="ICON BACK SUPPORT HELP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivBackgroundBiru" />


    <TextView
        android:id="@+id/tvSupportHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="18dp"
        android:text="Support and Help"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flBoxPutih"
        android:layout_width="350dp"
        android:layout_height="wrap_content" android:layout_marginTop="30dp"
        android:background="@drawable/background_putih"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSupportHelp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
        android:id="@+id/imageViewGradient"
        android:layout_width="300dp"
        android:layout_height="155dp"
        android:background="@drawable/shape_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

        <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Support"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toStartOf="@+id/imageViewGradient"
        app:layout_constraintEnd_toEndOf="@+id/imageViewGradient"
        app:layout_constraintTop_toTopOf="@+id/imageViewGradient"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewGradient"
        app:layout_constraintVertical_bias="0.15" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need technical assistance or have a question?"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
            app:layout_constraintStart_toStartOf="@+id/imageViewGradient"
            android:layout_marginStart="16dp" android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/textViewDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our team is here to help."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
            app:layout_constraintStart_toStartOf="@+id/imageViewGradient"
            android:layout_marginStart="16dp" android:layout_marginTop="-16dp" />

        <TextView
            android:id="@+id/textViewDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: support@careermate.id"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription1"
            app:layout_constraintStart_toStartOf="@+id/imageViewGradient"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-4dp" />

        <TextView
            android:id="@+id/textViewDescription3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +62 87861658909"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription2"
            app:layout_constraintStart_toStartOf="@+id/imageViewGradient"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-16dp" />

        <TextView
            android:id="@+id/textViewDescription4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions (FAQ)"
            android:textStyle="bold"
            android:textSize="14sp"
            android:padding="8dp"
            android:paddingStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewGradient"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewDescription5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="How do I change my selected career path?"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="1dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewDescription6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="To change your selected career path, go to the Settings menu and tap on Career Preferences. From there, choose Edit Career Path and select a new option that aligns with your goals."
            android:textSize="12sp"
            android:textStyle="normal"
            android:justificationMode="inter_word"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/textViewDescription7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Can I view detailed information about internships and volunteer?"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="1dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewDescription8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="To change your selected career path, go to the Settings menu and tap on Career Preferences. From there, choose Edit Career Path and select a new option that aligns with your goals."
            android:textSize="12sp"
            android:textStyle="normal"
            android:justificationMode="inter_word"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/textViewDescription9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Is support available through a Live Chat Bot?"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/textViewDescription10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="To change your selected career path, go to the Settings menu and tap on Career Preferences. From there, choose Edit Career Path and select a new option that aligns with your goals."
            android:textSize="12sp"
            android:textStyle="normal"
            android:justificationMode="inter_word"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="24dp" app:layout_constraintTop_toBottomOf="@+id/textViewDescription9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>