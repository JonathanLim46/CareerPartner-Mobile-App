<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shimmerColor">

        <ImageView
            android:id="@+id/ivProjectsShimmer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/shimmerColor"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tvProjectsTitleShimmer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmerColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLength="30"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toTopOf="@+id/ivProjectsShimmer"
            app:layout_constraintStart_toEndOf="@+id/ivProjectsShimmer"
            />

        <TextView
            android:id="@+id/tvProjectsYearShimmer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmerColor"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLength="40"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProjectsTitleShimmer"
            app:layout_constraintStart_toStartOf="@+id/tvProjectsTitleShimmer"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenSourceShimmer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmerColor"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingHorizontal="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvProjectsYearShimmer"
            app:layout_constraintStart_toEndOf="@id/ivProjectsShimmer"
            app:layout_constraintBottom_toBottomOf="@+id/ivProjectsShimmer"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMoreShimmer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/shimmerColor"
            app:layout_constraintBottom_toBottomOf="@+id/tvProjectsTitleShimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvProjectsTitleShimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>